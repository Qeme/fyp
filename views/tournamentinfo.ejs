                <!-- Pass tournament ID to Update button -->
                <a href="/tournamentinfo/updateTour?id=<%= tournament.id %>">
                    <input type="button" value="Update">
                </a>

                <!-- Ending the tournament -->
                <a href="/tournamentinfo/completeTour?id=<%= tournament.id %>">
                    <input type="button" value="Complete">
